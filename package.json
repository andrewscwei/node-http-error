{
  "name": "@andrewscwei/http-error",
  "version": "1.0.0",
  "description": "Basic HTTP errors with status codes for Node.js",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "npm run lint",
    "build": "npm run clean && tsc",
    "build:test": "npm run build -- --project tsconfig.test.json",
    "test": "npm run build:test && mocha --timeout 30000 --reporter spec --full-trace --colors --recursive --bail --exit $([ -z \"$npm_config_files\" ] && echo \"build/**/*.spec.js\" || echo \"build/$npm_config_files\")",
    "test:ts": "mocha -r ts-node/register --timeout 30000 --reporter spec --full-trace --colors --recursive --bail --exit $([ -z \"$npm_config_files\" ] && echo \"src/**/*.spec.ts\" || echo \"src/$npm_config_files\")",
    "lint": "eslint --ext .ts --ignore-pattern *.spec.ts src",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewscwei/node-http-error.git"
  },
  "keywords": [
    "node",
    "http",
    "error"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "files": [
    "build"
  ],
  "bugs": {
    "url": "https://github.com/andrewscwei/node-http-error/issues"
  },
  "homepage": "https://github.com/andrewscwei/node-http-error#readme",
  "types": "build/index.d.ts",
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.4.1",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.2",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@andrewscwei/super-error": "^1.1.0"
  }
}
