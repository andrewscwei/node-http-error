{
  "name": "@andrewscwei/http-error",
  "version": "1.2.0",
  "description": "Basic HTTP errors with status codes for Node.js",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "npm run lint",
    "build": "npm run clean && tsc",
    "build:test": "npm run build -- --project tsconfig.test.json",
    "test": "mocha -b -c --timeout 30000 --recursive --extension spec.js --exit \"build/$npm_config_files\"",
    "test:ts": "mocha -r ts-node/register -b -c --timeout 30000 --recursive --extension spec.ts --exit \"src/$npm_config_files\"",
    "lint": "eslint --ext .ts --ignore-pattern *.spec.ts src",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewscwei/node-http-error.git"
  },
  "keywords": [
    "node",
    "http",
    "error"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "files": [
    "build"
  ],
  "bugs": {
    "url": "https://github.com/andrewscwei/node-http-error/issues"
  },
  "homepage": "https://github.com/andrewscwei/node-http-error#readme",
  "types": "build/index.d.ts",
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "dotenv": "^16.0.0",
    "eslint": "^8.9.0",
    "mocha": "^9.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.5.0",
    "tslint": "^6.1.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@andrewscwei/super-error": "^1.5.0"
  }
}
